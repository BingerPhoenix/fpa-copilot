{
  "name": "fpa-copilot-mvp",
  "version": "1.0.0",
  "description": "Enterprise FP&A Intelligence Platform with AI-powered insights and visual intelligence",
  "private": true,
  "homepage": "https://your-fpa-copilot.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fpa-copilot-mvp"
  },
  "keywords": [
    "financial-planning",
    "analysis",
    "ai",
    "dashboard",
    "enterprise",
    "nextjs",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "preview": "npm run build && npm run start",
    "clean": "rm -rf .next out dist",
    "test": "echo \"No tests specified\" && exit 0",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "env:pull": "vercel env pull .env.local",
    "env:add": "vercel env add",
    "check:deps": "npm outdated",
    "update:deps": "npm update",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bundle:stats": "npx @next/bundle-analyzer",
    "precommit": "npm run lint && npm run type-check",
    "prepare": "husky install",
    "performance:audit": "lighthouse --chrome-flags='--headless' --output=html --output-path=./lighthouse-report.html http://localhost:3000"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "next": "15.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.3.3",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "vercel": {
    "functions": {
      "app/api/**": {
        "maxDuration": 30
      }
    },
    "regions": [
      "iad1",
      "sfo1"
    ],
    "framework": "nextjs",
    "buildCommand": "npm run build:production",
    "installCommand": "npm ci",
    "outputDirectory": ".next"
  }
}
