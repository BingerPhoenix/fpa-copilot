{
  "version": 2,
  "name": "fpa-copilot",
  "alias": ["fpa-copilot.vercel.app", "your-custom-domain.com"],
  "regions": ["iad1", "sfo1", "lhr1"],
  "framework": "nextjs",
  "buildCommand": "npm run build:production",
  "installCommand": "npm ci --production=false",
  "outputDirectory": ".next",
  "functions": {
    "app/**/*.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/**/*.js": {
      "maxDuration": 60,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/favicon.ico",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/dashboard",
      "destination": "/test-charts",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health-check"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": true
  },
  "env": {
    "NEXT_PUBLIC_APP_VERSION": "@npm_package_version",
    "NEXT_PUBLIC_BUILD_TIME": "@build_time",
    "NEXT_PUBLIC_VERCEL_ENV": "@vercel_env"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "crons": [
    {
      "path": "/api/health-check",
      "schedule": "0 */6 * * *"
    }
  ]
} 